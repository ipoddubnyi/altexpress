{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": false,
        "outDir": "./dist",
        "baseUrl": ".",
        "rootDir": ".",
        "composite": true,
        "strict": true,
        "moduleResolution": "node",
    
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,

        "paths": {
            "@altcrm/altexpress": [ "./index" ]
        },
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
  }
  